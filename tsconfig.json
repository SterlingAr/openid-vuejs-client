{
  "compilerOptions": {
    "target": "es5",
    "strict": true,
    "module": "es2015",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "es2015"
    ]
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
